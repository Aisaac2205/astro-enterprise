---
import Layout from "../layouts/Layout.astro";
import FlowDiagram from "../features/architecture/FlowDiagram.astro";
---

<Layout title="Arquitectura | Nexo">
    <!-- Header Hero -->
    <section class="relative bg-brand-dark py-32 overflow-hidden">
        <div
            class="absolute inset-0 bg-[linear-gradient(rgba(16,185,129,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(16,185,129,0.03)_1px,transparent_1px)] bg-[size:50px_50px]"
        >
        </div>
        <div class="container mx-auto px-4 relative z-10">
            <div class="max-w-4xl mx-auto text-center">
                <h1
                    class="text-brand-accent font-bold tracking-widest uppercase text-xs mb-6"
                >
                    Infraestructura Técnica
                </h1>
                <h2
                    class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight"
                >
                    Diseño Robusto y <span class="text-brand-accent"
                        >Escalable</span
                    >
                </h2>
                <p class="text-gray-400 text-xl font-light max-w-2xl mx-auto">
                    Arquitectura avanzada de microservicios y nube diseñada para
                    garantizar alta disponibilidad y seguridad crítica.
                </p>
            </div>
        </div>
        <!-- Gradient overlay bottom -->
        <div
            class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-brand-light to-transparent"
        >
        </div>
    </section>

    <FlowDiagram />
</Layout>
