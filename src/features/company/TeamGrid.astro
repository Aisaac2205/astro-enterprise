---
import { getCollection } from "astro:content";

const teamMembers = await getCollection("team");
---

<section class="py-12 bg-white">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-8">Nuestro Equipo</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            {
                teamMembers.map((member) => (
                    <div class="bg-white p-6 rounded-lg shadow-sm hover:shadow-lg transition-shadow border border-gray-100 text-center group">
                        <img
                            src={member.data.avatarUrl}
                            alt={member.data.name}
                            class="w-32 h-32 rounded-full mx-auto mb-4 object-cover border-4 border-brand-light group-hover:border-brand-blue transition-colors"
                        />
                        <h3 class="text-xl font-bold text-brand-dark mb-1">
                            {member.data.name}
                        </h3>
                        <p class="text-brand-blue font-medium mb-3 text-sm uppercase tracking-wide">
                            {member.data.role}
                        </p>
                        <p class="text-gray-500 text-sm">{member.data.bio}</p>
                    </div>
                ))
            }
        </div>
    </div>
</section>
