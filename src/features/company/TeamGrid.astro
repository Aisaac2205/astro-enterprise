---
import { getCollection } from "astro:content";
import Icon from "../../components/ui/Icon";

const teamMembers = await getCollection("team");

const iconMap: Record<string, string> = {
    linkedin: "Linkedin",
    github: "Github",
    twitter: "Twitter",
    email: "Mail",
};
---

<section class="py-24 bg-brand-light">
    <div class="container mx-auto px-4">
        <div class="text-center mb-16">
            <h2
                class="text-brand-accent font-bold tracking-widest uppercase text-xs mb-4"
            >
                Nuestro Equipo
            </h2>
            <h3 class="text-3xl md:text-5xl font-bold text-brand-blue mb-6">
                Expertos en Gestión Documental
            </h3>
            <p class="text-gray-600 max-w-2xl mx-auto text-lg font-light">
                Profesionales comprometidos con la transformación digital de su
                empresa.
            </p>
        </div>

        <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-7xl mx-auto"
        >
            {
                teamMembers.map((member) => (
                    <div class="group">
                        <div class="bg-white p-8 rounded-2xl border border-gray-100 hover:border-gray-200 hover:shadow-xl transition-all duration-300 text-center h-full flex flex-col">
                            <div class="mb-6">
                                <div class="w-32 h-32 rounded-full mx-auto bg-gradient-to-br from-brand-blue to-brand-dark flex items-center justify-center border-4 border-brand-light group-hover:border-brand-accent transition-colors duration-300 group-hover:scale-105 transform">
                                    <span class="text-white text-4xl font-bold">
                                        {member.data.avatarUrl}
                                    </span>
                                </div>
                            </div>
                            <h4 class="text-xl font-bold text-brand-blue mb-2">
                                {member.data.name}
                            </h4>
                            <p class="text-brand-accent font-semibold mb-4 text-xs uppercase tracking-widest">
                                {member.data.role}
                            </p>
                            <p class="text-gray-500 text-sm leading-relaxed mb-6 flex-grow">
                                {member.data.bio}
                            </p>
                            {member.data.social &&
                                member.data.social.length > 0 && (
                                    <div class="flex justify-center gap-4 pt-4 border-t border-gray-100">
                                        {member.data.social.map((link) => (
                                            <a
                                                href={link.url}
                                                target="_blank"
                                                rel="noopener noreferrer"
                                                class="w-8 h-8 rounded-full bg-brand-blue/5 text-brand-blue hover:bg-brand-blue hover:text-white transition-colors flex items-center justify-center p-1.5"
                                                aria-label={link.platform}
                                            >
                                                <Icon
                                                    name={
                                                        iconMap[link.platform]
                                                    }
                                                    className="w-full h-full"
                                                    client:only="react"
                                                />
                                            </a>
                                        ))}
                                    </div>
                                )}
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
