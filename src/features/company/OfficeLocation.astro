---
// OfficeLocation.astro - Sección de ubicación de oficina con estilo Enterprise
import Icon from "../../components/ui/Icon";
---

<section class="py-24 bg-brand-dark relative overflow-hidden">
    <!-- Subtle grid background -->
    <div
        class="absolute inset-0 bg-[linear-gradient(rgba(16,185,129,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(16,185,129,0.03)_1px,transparent_1px)] bg-[size:40px_40px]"
    >
    </div>

    <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-7xl mx-auto">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
                <!-- Información de contacto -->
                <div>
                    <h2
                        class="text-brand-accent font-bold tracking-widest uppercase text-xs mb-4"
                    >
                        Ubicación
                    </h2>
                    <h3 class="text-3xl md:text-5xl font-bold text-white mb-6">
                        Visítanos en Nuestras Oficinas
                    </h3>
                    <p class="text-gray-400 text-lg font-light mb-12">
                        Estamos ubicados en el corazón de Jutiapa, listos para
                        atender tus necesidades de gestión documental.
                    </p>

                    <div class="space-y-8">
                        <!-- Dirección -->
                        <div class="flex items-start gap-4">
                            <div
                                class="w-12 h-12 rounded-xl bg-brand-blue/10 text-brand-accent flex items-center justify-center flex-shrink-0"
                            >
                                <Icon
                                    name="MapPin"
                                    className="w-6 h-6"
                                    client:only="react"
                                />
                            </div>
                            <div>
                                <h4 class="text-white font-semibold mb-2">
                                    Dirección
                                </h4>
                                <p class="text-gray-400 font-light">
                                    Centro Comercial Metroplaza Jutiapa<br />
                                    Jutiapa, Guatemala
                                </p>
                            </div>
                        </div>

                        <!-- Horario -->
                        <div class="flex items-start gap-4">
                            <div
                                class="w-12 h-12 rounded-xl bg-brand-blue/10 text-brand-accent flex items-center justify-center flex-shrink-0"
                            >
                                <Icon
                                    name="Clock"
                                    className="w-6 h-6"
                                    client:only="react"
                                />
                            </div>
                            <div>
                                <h4 class="text-white font-semibold mb-2">
                                    Horario de Atención
                                </h4>
                                <p class="text-gray-400 font-light">
                                    Lunes a Viernes: 9:00 AM - 6:00 PM<br />
                                    Sábado: 9:00 AM - 1:00 PM
                                </p>
                            </div>
                        </div>

                        <!-- Teléfono -->
                        <div class="flex items-start gap-4">
                            <div
                                class="w-12 h-12 rounded-xl bg-brand-blue/10 text-brand-accent flex items-center justify-center flex-shrink-0"
                            >
                                <Icon
                                    name="Phone"
                                    className="w-6 h-6"
                                    client:only="react"
                                />
                            </div>
                            <div>
                                <h4 class="text-white font-semibold mb-2">
                                    Teléfono
                                </h4>
                                <p class="text-gray-400 font-light">
                                    +502 3722 0606<br />
                                    Atención inmediata vía WhatsApp
                                </p>
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="flex items-start gap-4">
                            <div
                                class="w-12 h-12 rounded-xl bg-brand-blue/10 text-brand-accent flex items-center justify-center flex-shrink-0"
                            >
                                <Icon
                                    name="Mail"
                                    className="w-6 h-6"
                                    client:only="react"
                                />
                            </div>
                            <div>
                                <h4 class="text-white font-semibold mb-2">
                                    Email
                                </h4>
                                <p class="text-gray-400 font-light">
                                    contacto@nexo.com<br />
                                    soporte@nexo.com
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Mapa con estilo Terminal -->
                <div class="relative group">
                    {/* Glow effect */}
                    <div
                        class="absolute -inset-4 bg-brand-accent/10 rounded-[2rem] blur-3xl opacity-0 group-hover:opacity-100 transition duration-700"
                    >
                    </div>

                    <div
                        class="bg-brand-blue rounded-2xl overflow-hidden border border-white/10 relative shadow-2xl shadow-black/50"
                    >
                        {/* Terminal Header */}
                        <div
                            class="bg-[#1e293b] px-4 py-3 flex items-center justify-between border-b border-white/5"
                        >
                            <div class="flex gap-2">
                                <div
                                    class="w-2.5 h-2.5 rounded-full bg-[#ff5f56]"
                                >
                                </div>
                                <div
                                    class="w-2.5 h-2.5 rounded-full bg-[#ffbd2e]"
                                >
                                </div>
                                <div
                                    class="w-2.5 h-2.5 rounded-full bg-[#27c93f]"
                                >
                                </div>
                            </div>
                            <span
                                class="text-[10px] text-gray-400 font-medium tracking-[0.2em] uppercase font-mono"
                            >
                                google-maps.nav
                            </span>
                            <div class="flex items-center gap-2">
                                <span
                                    class="w-1.5 h-1.5 rounded-full bg-brand-accent animate-pulse"
                                ></span>
                                <span
                                    class="text-[9px] text-brand-accent font-mono uppercase tracking-wider"
                                >
                                    LIVE LOCATION
                                </span>
                            </div>
                        </div>

                        {/* Map iframe */}
                        <div class="aspect-video lg:aspect-square w-full">
                            <iframe
                                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3862.333333333333!2d-89.911107!3d14.2930031!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8f627df3e1ea869b%3A0xbef0c0b9533d53dc!2sCentro+Comercial+Metroplaza+Jutiapa!5e0!3m2!1ses-419!2sgt!4v1700000000000!5m2!1ses-419!2sgt"
                                width="100%"
                                height="100%"
                                style="border:0;"
                                allowfullscreen=""
                                loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade"
                                class="grayscale invert brightness-75 contrast-125 opacity-80 hover:grayscale-0 hover:invert-0 hover:brightness-100 hover:contrast-100 hover:opacity-100 transition-all duration-700"
                            ></iframe>
                        </div>

                        {/* Terminal footer */}
                        <div
                            class="bg-[#1e293b] px-4 py-2 flex items-center justify-between border-t border-white/5"
                        >
                            <span class="text-[9px] font-mono text-gray-500">
                                coords: 14.2930, -89.9111
                            </span>
                            <span
                                class="text-[9px] font-mono text-brand-accent"
                            >
                                ● METROPLAZA JUTIAPA
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
