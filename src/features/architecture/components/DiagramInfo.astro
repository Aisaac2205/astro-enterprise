---
interface Props {
    icon: string;
    color: string;
    diagramType: string;
    title: string;
    description: string;
    specs?: Array<{ label: string; value: string }>;
}

const { icon, color, diagramType, title, description, specs } = Astro.props;
---

<div>
    <div class="flex items-center gap-3 mb-4">
        <span class={`text-2xl ${color}`}>
            {icon}
        </span>
        <span
            class="inline-block px-3 py-1 bg-white/5 border border-white/10 text-[10px] font-mono font-bold uppercase tracking-widest text-gray-300 rounded-full backdrop-blur-sm"
        >
            {diagramType}
        </span>
    </div>

    <h3 class="text-2xl md:text-3xl font-bold text-white mb-4 tracking-tight">
        {title}
    </h3>

    <p class="text-gray-400 leading-relaxed text-base mb-6 font-light">
        {description}
    </p>

    {/* Inline specs preview */}
    {
        specs && (
            <div class="space-y-2">
                {specs.map((spec) => (
                    <div class="flex items-center justify-between py-2 border-b border-white/5">
                        <span class="text-xs text-gray-500 font-medium">
                            {spec.label}
                        </span>
                        <span class="text-xs font-mono text-brand-accent font-semibold">
                            {spec.value}
                        </span>
                    </div>
                ))}
            </div>
        )
    }
</div>
