---
import { getCollection } from "astro:content";

const diagrams = await getCollection("architecture");
---

<section class="py-12 bg-white">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12">
            Arquitectura del Sistema
        </h2>
        <div class="space-y-16">
            {
                diagrams.map((diagram, index) => (
                    <div
                        class={`flex flex-col ${index % 2 === 0 ? "lg:flex-row" : "lg:flex-row-reverse"} items-center gap-16`}
                    >
                        <div class="lg:w-1/2">
                            <div class="bg-brand-light p-4 rounded-xl shadow-inner border border-gray-100">
                                <img
                                    src={diagram.data.imageUrl}
                                    alt={diagram.data.title}
                                    class="w-full h-auto rounded-lg shadow-md bg-white"
                                />
                            </div>
                        </div>
                        <div class="lg:w-1/2">
                            <span class="inline-block px-4 py-1 bg-blue-50 text-brand-blue rounded-full text-xs font-bold mb-6 uppercase tracking-wider border border-blue-100">
                                {diagram.data.diagramType}
                            </span>
                            <h3 class="text-3xl font-bold mb-6 text-brand-dark">
                                {diagram.data.title}
                            </h3>
                            <p class="text-lg text-gray-500 leading-relaxed">
                                {diagram.data.description}
                            </p>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
